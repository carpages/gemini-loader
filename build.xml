<?xml version="1.0" encoding="UTF-8"?>

<project name="gemini-loader" default="build">
  <target name="build" depends="clean,bower,npm,grunt"/>

  <target name="clean" description="Cleanup build artifacts">
    <delete dir="${basedir}/bower_components"/>
    <delete dir="${basedir}/node_modules"/>
  </target>

  <target name="bower" description="Install Bower dependencies">
    <exec executable="bower">
      <arg value="i" />
      <arg value="--allow-root" />
    </exec>
  </target>

  <target name="npm" description="Set up NPM and dependencies">
    <exec executable="npm">
      <arg value="i" />
      <arg value="--no-bin-links" />
    </exec>
  </target>

  <target name="grunt" description="Run grunt">
    <exec executable="grunt"/>
  </target>

</project>
